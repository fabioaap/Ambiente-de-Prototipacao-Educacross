    <script>
        function gerarCards(qtd) {
            const lista = document.getElementById('lista');
            lista.innerHTML = '';
            for (let i = 1; i <= qtd; i++) {
                const card = document.createElement('div');
                card.className = 'rounded-xl border border-slate-200 bg-white shadow-sm p-4 space-y-2';
                card.innerHTML = `
          <div class="text-sm font-medium text-brand-700">Questão ${i}</div>
          <p class="text-sm text-slate-700">Enunciado gerado automaticamente com base nas instruções e parâmetros definidos.</p>
          <div class="flex flex-wrap gap-2 text-xs">
            <span class="badge">Origem IA</span>
            <span class="badge">Quiz</span>
          </div>
          <div class="flex gap-2">
            <button class="btn">Editar</button>
            <button class="btn">Aprovar</button>
          </div>
        `;
                lista.appendChild(card);
            }
        }

        function simularGeracao() {
            const qtd = parseInt(document.getElementById('quantidade').value) || 5;
            const progresso = document.getElementById('progresso');
            const barra = document.getElementById('barra');
            progresso.classList.remove('hidden');
            let pct = 0;
            const interval = setInterval(() => {
                pct += Math.random() * 15;
                barra.style.width = pct + '%';
                if (pct >= 100) {
                    clearInterval(interval);
                    gerarCards(qtd);
                    progresso.classList.add('hidden');
                }
            }, 200);
        }

        document.getElementById('btnGerar').addEventListener('click', simularGeracao);
        document.getElementById('gerarTopo').addEventListener('click', simularGeracao);
    </script>
